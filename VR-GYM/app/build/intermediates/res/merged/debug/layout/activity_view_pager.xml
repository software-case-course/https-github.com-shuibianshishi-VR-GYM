<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#efefef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:background="#efefef"
        android:id="@+id/Dss_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </android.support.v4.view.ViewPager>


    <HorizontalScrollView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none"
        android:background="#efefef"
        android:id="@+id/Dss_horizontalScrollView"
        >
        <RelativeLayout
            android:background="#efefef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <RadioGroup
                android:weightSum="3"
                android:id="@+id/DssGrounp"
                android:layout_height="49dp"
                android:background="@color/White"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_marginTop="5dp"
                    android:drawableTop="@drawable/game_selector"
                    android:gravity="center"
                    android:layout_height="44dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="游戏sport"
                    android:id="@+id/SelectBook"
                    android:checked="false" />
                <RadioButton
                    android:layout_marginTop="5dp"
                    android:drawableTop="@drawable/realselector"
                    android:gravity="center"
                    android:layout_height="44dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="现实sport"
                    android:id="@+id/DonateBook"
                    android:checked="false" />
                <RadioButton
                    android:layout_marginTop="5dp"
                    android:drawableTop="@drawable/per_selector"
                    android:gravity="center"
                    android:layout_height="44dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="未登录"
                    android:id="@+id/SellBook"
                    android:checked="false" />
            </RadioGroup>

            <ImageView
                android:id="@+id/Dss_ImageView"
                android:layout_width="129dp"
                android:layout_height="4dp"
                android:background="@color/SceondBlue"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </HorizontalScrollView>




</RelativeLayout>