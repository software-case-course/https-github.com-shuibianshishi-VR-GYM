<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="200dp"
        layout="@layout/activity_md_using_surface_view"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView

                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="仙剑奇侠传-望月"
                android:layout_marginLeft="5dp"
                android:id="@+id/Real_Name"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray1"
                android:background="#ffffffff" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp">
        <TextView
            android:textSize="11sp"
            android:textColor="@color/gray2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="始于黄山青鸾峰之颠"
            android:id="@+id/Real_detail"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:ellipsize="end"

            android:background="#ffffffff"
            android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_marginRight="10dp"
                android:id="@+id/MoreMessage"
                android:layout_weight="1"
                android:background="@drawable/arrow" />


    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView3"
            android:background="@drawable/videoplay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1558次播放"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:paddingRight="100dp"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:layout_toLeftOf="@+id/share">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:background="@drawable/dianzan" />

            <TextView

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:id="@+id/textView14" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/share"
            android:paddingRight="20dp"
            android:layout_toLeftOf="@+id/download">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView5"
                android:layout_marginLeft="5dp"
                android:background="@drawable/share" />

            <TextView

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:id="@+id/textView15" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:id="@+id/download"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView6"
                android:layout_marginLeft="5dp"
                android:background="@drawable/download" />

            <TextView

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存"
                android:id="@+id/textView16" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="#d1cfcf"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#ffffffff">

        <TextView
            android:layout_width="2.5dp"
            android:layout_height="fill_parent"
            android:background="#ff077cff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="猜你喜欢"
            android:id="@+id/textView17"
            android:textSize="15sp" />

    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        layout="@layout/listview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#ffffffff">

        <TextView
            android:layout_width="4dp"
            android:layout_height="fill_parent"
            android:background="#ff077cff"
            android:id="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评 论"
            android:textSize="15sp"
            android:id="@+id/textView22"
            android:paddingLeft="4dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView21"
            android:layout_toRightOf="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部热评"
            android:textSize="10sp"
            android:paddingTop="2dp"
            android:id="@+id/textView23"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:id="@+id/imageView8"
            android:background="@drawable/right"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
